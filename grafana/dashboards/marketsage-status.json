{
  "id": null,
  "title": "MarketSage - Live Status Dashboard",
  "tags": ["marketsage", "live", "status"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "üü¢ Services Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up == 1)",
          "legendFormat": "Services Up",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "single", "fixedColor": "green"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 8},
              {"color": "green", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "üíæ System Load",
      "type": "gauge",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 10,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 2},
              {"color": "red", "value": 4}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "üß† Memory Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory %",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 85}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "üîó Redis Operations",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "rps",
          "color": {"mode": "single", "fixedColor": "purple"}
        }
      }
    },
    {
      "id": 5,
      "title": "üìä Container CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\"/docker/396.*|/docker/05207.*|/docker/067.*\"}[5m]) * 100",
          "legendFormat": "{{id}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0
        }
      }
    },
    {
      "id": 6,
      "title": "üóÑÔ∏è Database Activity",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_fetched{datname=\"marketsage\"}[5m])",
          "legendFormat": "Rows Fetched/sec",
          "datasource": "Prometheus"
        },
        {
          "expr": "rate(pg_stat_database_tup_inserted{datname=\"marketsage\"}[5m])",
          "legendFormat": "Rows Inserted/sec",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "rps",
          "min": 0
        }
      }
    },
    {
      "id": 7,
      "title": "üìà All Services Status",
      "type": "table",
      "targets": [
        {
          "expr": "up",
          "format": "table",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "color-background",
            "align": "center"
          },
          "mappings": [
            {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
            {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
          ]
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "instance": "Service Address",
              "job": "Service Type",
              "Value": "Status"
            }
          }
        }
      ]
    }
  ],
  "time": {"from": "now-15m", "to": "now"},
  "refresh": "5s",
  "version": 1,
  "editable": true
}