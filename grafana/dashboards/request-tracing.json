{
  "id": null,
  "title": "MarketSage - Request Flow Analysis",
  "tags": ["marketsage", "tracing", "requests", "correlation"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Trace Explorer",
      "type": "traces",
      "targets": [
        {
          "query": "service_name=\"marketsage\"",
          "datasource": "Tempo"
        }
      ],
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
      "options": {
        "search": {
          "hide": false
        }
      }
    },
    {
      "id": 2,
      "title": "Request Duration Distribution",
      "type": "histogram",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(traces_spanmetrics_duration_bucket[5m])) by (le, service_name))",
          "legendFormat": "{{service_name}} p50",
          "datasource": "Prometheus"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(traces_spanmetrics_duration_bucket[5m])) by (le, service_name))",
          "legendFormat": "{{service_name}} p95",
          "datasource": "Prometheus"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(traces_spanmetrics_duration_bucket[5m])) by (le, service_name))",
          "legendFormat": "{{service_name}} p99",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    },
    {
      "id": 3,
      "title": "Error Rate by Operation",
      "type": "table",
      "targets": [
        {
          "expr": "sum by (service_name, span_name) (rate(traces_spanmetrics_calls_total{status_code=\"STATUS_CODE_ERROR\"}[5m])) / sum by (service_name, span_name) (rate(traces_spanmetrics_calls_total[5m])) * 100",
          "format": "table",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "displayMode": "color-background"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Request Volume Heatmap",
      "type": "heatmap",
      "targets": [
        {
          "expr": "sum by (service_name) (rate(traces_spanmetrics_calls_total[5m]))",
          "legendFormat": "{{service_name}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
      "options": {
        "calculate": false,
        "calculation": {},
        "cellGap": 2,
        "color": {
          "mode": "spectrum",
          "scheme": "Blues"
        }
      }
    },
    {
      "id": 5,
      "title": "Cross-Service Call Pattern",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (client, server) (rate(traces_service_graph_request_total[5m]))",
          "legendFormat": "{{client}} â†’ {{server}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
      "fieldConfig": {
        "defaults": {
          "unit": "rps",
          "min": 0
        }
      }
    },
    {
      "id": 6,
      "title": "Database Query Correlation",
      "type": "logs",
      "targets": [
        {
          "expr": "{service_name=\"unknown_service\"} |~ \"(?i)database|query|sql|postgres\" | json",
          "datasource": "Loki"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "30s",
  "version": 1,
  "editable": true
}