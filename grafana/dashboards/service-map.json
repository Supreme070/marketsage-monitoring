{
  "id": null,
  "title": "MarketSage - Service Dependency Map",
  "tags": ["marketsage", "service-map", "dependencies"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Dependency Graph",
      "type": "nodeGraph",
      "targets": [
        {
          "expr": "traces_service_graph_request_total",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 20, "w": 24, "x": 0, "y": 0},
      "options": {
        "nodes": {
          "mainStatUnit": "rps",
          "secondaryStatUnit": "ms",
          "arcs": [
            {
              "field": "Request rate",
              "color": "green"
            }
          ]
        },
        "edges": {
          "mainStatUnit": "rps",
          "secondaryStatUnit": "ms",
          "arcs": [
            {
              "field": "Request rate", 
              "color": "green"
            }
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "nodeOptions": {
              "mainStatUnit": "rps",
              "secondaryStatUnit": "ms"
            }
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Service Request Matrix",
      "type": "table",
      "targets": [
        {
          "expr": "sum by (client, server) (rate(traces_service_graph_request_total[5m]))",
          "format": "table",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "color-background",
            "align": "center"
          },
          "unit": "rps"
        }
      }
    },
    {
      "id": 3,
      "title": "Service Latency Matrix",
      "type": "table",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (client, server, le) (rate(traces_service_graph_request_duration_seconds_bucket[5m])))",
          "format": "table",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "color-background",
            "align": "center"
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 4,
      "title": "Service Success Rate",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (server) (rate(traces_service_graph_request_total{server!=\"unknown\"}[5m]))",
          "legendFormat": "{{server}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
      "options": {
        "pieType": "pie",
        "legend": {"displayMode": "visible", "placement": "right"}
      }
    },
    {
      "id": 5,
      "title": "Critical Path Analysis",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (server) (rate(traces_service_graph_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{server}} p99",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 1.0}
            ]
          }
        }
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "30s",
  "version": 1,
  "editable": true
}